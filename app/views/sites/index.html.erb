<div class="container">

<!-- Top div for search filters -->
  <div class="row">
    <!-- Day filter -->
    <div class="col-sm-4 col-sm-offset-1">
      <%= form_for(@itinerary) do |f| %>
        <%= f.text_field :date, placeholder: "Select Date" %>
      <% end %> 
    </div><!-- /.col-sm-4 -->
    <!-- Activity filter -->
    <div class="col-sm-4">
      <div class="input-group">
        <input type="text" class="form-control" value="Events">
        <div class="input-group-btn">
          <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown">Select Activity <span class="caret"></span></button>
          <ul class="dropdown-menu pull-right">
            <li><a href="#">Events</a></li>
            <li><a href="#">Restuarants</a></li>
            <li><a href="#">Concerts</a></li>
          </ul>
        </div><!-- /btn-group -->
      </div><!-- /input-group -->
    </div><!-- /.col-sm-4 -->
    <div class="col-sm-2">
      <div class="itinerary">
        <a href="#openModal">View Itinerary</a>
      </div>
    </div>
  </div><!-- /.row -->

  <div class="container">
    <%= form_for(@yelpfind) do |f| %>
      <%= f.text_field :searchterm, placeholder: "What are you craving?" %><br />
      <%= f.text_field :address, placeholder: "Street Address" %><br />
      <%= f.text_field :city, placeholder: "City" %><br />
      <%= f.text_field :state, placeholder: "State" %><br />
      <%= f.text_field :zipcode, placeholder: "5-digit Zipcode" %><br />
      <%= f.label "Search Radius: " %>
      <%= f.select :searchradius, options_for_select([["Tenth Mile", 0.1], ["Quarter Mile", 0.25], ["Half Mile", 0.5], ["1 Mile", 1], ["5 Miles", 5], ["10 Miles", 10], ["25 Miles", 25]]) %><br />
      <%= f.label "Number of Results: " %>
      <%= f.select :resultslimit, options_for_select([["5", 5], ["10", 10], ["25", 25]]) %><br />
      <%= f.submit "Search for Restuarants" %>
    <% end %> 
  </div>

  <br>
  <br>

  <!-- Main div for results list and map -->
  <div class="row">
    <div class="rightdiv col-sm-4">
      <h4>Search Results:</h4>
      <div class="results">
        <% @results.each do |r| %>
          <ol>Result <%= r.id %><br />
            <ul>
              <li>Name: <%= r.name %></li>
              <li>Address: <%= r.full_address %></li>
              <li>Latitude: <%= r.latitude %></li>
              <li>Longitude: <%= r.longitude %></li>
            </ul>
          </ol>
        <% end %>
      </div>
    </div>
    <div class="col-sm-8">
      <div id="map-canvas"></div>
    </div>
  </div>

</div>

